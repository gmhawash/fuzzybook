<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @page.title %>

  
   <br/>
  <strong>Address:</strong>
  <%= @page.address %>

  <br/>
  <strong>About Me:</strong>
  <%= @page.message %>
</p>

<%= form_for(@page) do |f| %>
  <%= f.select(:state, Page::STATES) %>
  <%= f.submit :save %>
<% end %>

<%= form_for([@page, @post]) do |f| %>
  <%= f.text_area :body %>
  <%= f.submit :post %>
<% end %>
<br/>

<% @page.posts.sort.reverse.each do |post| %>
	<%= post.body %>
  <%= check_box_tag :likes %>  
  <%= radio_button_tag :likes, 'true' %>
	<br/>
<% end %>

<%= link_to 'Edit', edit_page_path(@page) %> |
<%= link_to 'Back', pages_path %>
